/* pages/userInfo/userInfo.wxss */
page{
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 24rpx;
  /* 必要的,别忘了 */
  box-sizing: border-box;
}

.avatar-wrapper{
  width: 200rpx !important;
  height: 200rpx !important;
  border-radius: 50%;
  overflow: hidden;
}
.avatar-wrapper image{
  width: 100%;
  height: 100%;
}

.userName,
.motto{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.inputArea{
  margin-left: 10rpx;
}

.info{
  margin: 25rpx 0;
}