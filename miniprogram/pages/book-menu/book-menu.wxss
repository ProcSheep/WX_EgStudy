/* pages/book-menu/book-menu.wxss */

/* 这个居中是通过 pad(20,上下) + 240(内容) = 280(总高)实现的 */
.book-item{
  display: flex;
  height: 280rpx;
  background-color: #ffffff;
  border-radius: 5%;
  box-sizing: border-box;
  padding: 20rpx;
}

.book-image{
  flex: 1;
}
.pic{
  height: 240rpx;
  width: 100%;
}
.sel-pic{
  width: 30rpx;
  height: 30rpx;
}

.book-info{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding-left: 20rpx;
}