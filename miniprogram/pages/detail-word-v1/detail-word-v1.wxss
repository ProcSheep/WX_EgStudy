page{
  height: 100%;
  background-color: #fafafa;
}

.header{
  height: 100rpx ;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header .right{
  display: flex;
  align-items: center;
}

.content{
  height: calc(100% - 100rpx);
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  align-items: center;
}

.content image{
  margin-top: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.word{
  width: 400rpx;
  height: 400rpx;
  border-radius: 5%;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.word .wordInfo{
  font-size: 45rpx;
  font-weight: 700;
  margin: 15rpx;
}

.control{
  display: flex;
}

.conItem{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 5%;
  background-color: rgb(255, 255, 255);
  text-align: center;
  line-height: 200rpx;
}